    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap" rel="stylesheet">
    <title>Eliminar-productos</title>
</head>
<body>
    <header>
        <div class="top-header">

            <a  href="/"><div class="logo"> 
                <img src="images/LarrazLogo.png" alt="Logo de Larraz Store" class ="imagen">
            </div></a>

            <div class = "top">
              <form class="search-bar" action="#" method="GET">
                <div class="bar-container"><input type="text" placeholder='Buscar' name="search-bar" class='bar'></div>
                <div class="search-container"><button type ="submit" value="search" class="search-button"><i class="fa fa-search"></i></button></div>
            </form> <br>
            </div>

            <a href="/cart"><div class = "carrito">
                <i class="fas fa-shopping-cart"></i>
            </div></a>

            <div class="burger-menu">
                <i class="fa fa-bars burger"></i>
            </div>
        </div> 
        <br>
        <nav class="menu-header">
          <ul class="lista-nav">
              <li>Productos</li>
              <li>Arma tu PC</li>
              <li>Servicio Tecnico</li>
              <li>Nosotros</li>
              <li>Contacto</li>
          </ul>
      </nav>
    </header>

    <main>
        <div class="form-adm-containter">
            <form action="" method="POST" class="product-cont">
                <label for="Product-name"> <h1>Eliminar producto</h1></label>
                <div>
                    <input type= "text" class="product-input" id="Product-name" placeholder="Nombre de producto" maxlength="75" required>
                </div>
                <div>
                    <input type= "text" class="product-price" id="Product-price" placeholder="Precio" pattern="[$]\s[\s0-9.]+" title="Solo en formato de numeros" required>
                </div>
                <div>
                    <input type= "text" class="product-detail" id="Product-detail" placeholder="Detalle de producto" maxlength="75" required> 
                </div>
                <div>
                    <h4>Seleccione una categoria para su producto</h4>
                    <label><input type="checkbox" id="cbox1" value="first_checkbox">Productos</label><br>
                    <select name="Desplegable-agregar" id="tipos-de-productos">
                        <option value="Componentes de PC">Componentes de PC</option>
                        <option value="Perifericos">Perifericos</option>
                        <option value="Celulares">Celulares</option>
                        <option value="Impresoras">Impresoras</option>
                        <option value="Articulos para el Hogar">Articulos para el Hogar</option>
                        <option value="Computadoras de escritorio">Computadoras de escritorio</option>
                        <option value="Notebooks y Tablets">Notebooks y Tablets</option>
                      </select><br>
                    <input type="checkbox" id="cbox2" value="second_checkbox"> <label for="cbox2">Servicio tecnico</label><br>
                    <select name="Desplegable-agregar" id="tipos-de-servicios">
                        <option value="Notebooks">Notebooks</option>
                        <option value="Celulares">Celulares</option>
                        <option value="Computadoras de escritorio">Computadoras de escritorio</option>
                        <option value="Impresoras">Impresoras</option>
                        <option value="Televisores">Televisores</option>
                    </select>
                </div>
                <div class="add-img" for="profile-img">
                    <label for="profile-img">AÃ±adir imagen de producto</label>
                    <input type="file" class="img-button" id="product-img" accept=".jpg, .png, .jpeg" required>
                 </div>
                <div class="btn-adm-producto-container">
                    <div>
                        <button type="submit" class="btn-adm-producto">Eliminar producto</button>
                    </div>
                </div>
            </form>
        </div>


    </main>

    <footer>
    </footer>

    
</body>
