<%- include ("../partials/head")%>
<title>Detalle del producto</title>
<script src="/js/products/productToCart.js"></script>
</head>

<body>
  <%- include ("../partials/header")%>
  <main>
    <h1 class="cursiva">Detalle del Producto:</h1>
    <article>
      <% for ( i = 0; i < productDetail.length; i++) { %> <% } %> 
        <section class = "contenedor">
            <div class = "contenedor-imagen">
                <img  class = "product-imagen" src= <%= productDetail.image %> alt= <%= productDetail.nombre %>/>
            </div>
          
            <div class = "contenedor-detalle">
              <div class = "contenedor-detalle">
                <h2 class="cursiva"><%= productDetail.nombre %></h2>
                <h3><%= productDetail.precio %></h3>
                <p> <%= productDetail.description %></p>
                <button href="/products/cart" class = "button-compra" id="buttonCart">Agregar a carrito</button>
              </div>
            </section>
            <hr>
            <div class = 'contenedor-edit-delete'>
						<a href="/products/modificar/<%=productDetail.id%>" class="action-button-edit">EDITAR</a>
            <form action="/products/detail/<%= productDetail.id %>/?_method=DELETE" method="POST">
							<button type="submit" class="action-button-delete"><a href='/products/product-cart'>ELIMINAR</a></button>
						</form>
          </div>

        </article>
        </main>
            

    <section class = "fixed-icons">
      <div class = "home">
          <a href="/"><i class="fas fa-home"></i></a>
      </div>
      <div class = "mobile">
          <i class="fas fa-mobile-alt"></i>
      </div>
      <div class = "controller">
          <i class="fas fa-gamepad"></i>
      </div>
      <div class = "user">
          <a href="/login"><i class="fas fa-user"></i></a>
      </div>
  </section>
  <%- include ("../partials/footer2")%>
</body>
</html>