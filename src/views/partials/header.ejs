          <a href="/service/"><li>Servicio Tecnico</li></a>
          <% if (locals.userLogged && locals.userLogged.isAdmin == 1) { %>
            <a href="http://localhost:3001/"><li>Dashboard</li></a>
            <a href="/users"><li>Usuarios</li></a>
          <% } %>
      </ul>
  </nav>
